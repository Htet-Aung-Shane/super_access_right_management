<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="access_right_mgmt_view_search" model="ir.ui.view">
        <field name="name">access_right_mgmt_view_search</field>
        <field name="model">access.right.mgmt</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="user_ids" string="Users" />
            </search>
        </field>
    </record>

    <record id="access_right_mgmt_view_list" model="ir.ui.view">
        <field name="name">access_right_mgmt_view_list</field>
        <field name="model">access.right.mgmt</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="user_ids" widget="many2many_tags" />
            </list>
        </field>
    </record>

    <record id="access_right_mgmt_view_form" model="ir.ui.view">
        <field name="name">access_right_mgmt_view_form</field>
        <field name="model">access.right.mgmt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group name="name" string="Name">
                            <field name="name" />
                        </group>
                        <group name="active_readonly_chatter" string="Is Active/Readonly">
                            <field name="active" string="Is Active This Access Rights" />
                            <field name="is_readonly"
                                help="If checked, this access right will be readonly for all users granted in this." />
                        </group>
                    </group>
                    <group>
                        <group name="revoke_developer_mode" string="Revoke Developer Mode">
                            <field name="revoke_developer_mode"
                                help="If checked, this access right will not allow users to access developer mode." />
                        </group>
                        <group name="chatter" string="Chatter Permission">
                            <field name="revoke_chatter"
                                help="If checked, this access right will not allow users to access chatter." />
                        </group>
                    </group>
                    <notebook>
                        <page name="users" string="Users">
                            <field name="user_ids" string="Users">
                                <list string="Users" editable="top" create="1">
                                    <field name="name" />
                                    <field name="login_date" />
                                    <field name="company_id" />
                                </list>
                            </field>
                        </page>
                        <page name="revoke_menu" string="Revoke Menus">
                            <field name="revoke_menu_ids" string="Revoke Menus" />
                        </page>
                        <page name="revoke_action" string="Model Access">
                            <field name="revoke_action_ids">
                                <list editable="bottom" create="1">
                                    <field name="model_id" width="1"/>
                                    <field name="model_name" width="1"/>
                                    <!-- <field name="server_action_ids" widget="many2many_tags" width="auto"/>
                                    <field name="report_action_ids" widget="many2many_tags" width="auto"/> -->
                                    <field name="is_readonly" width="1"/>
                                    <field name="revoke_create" width="1"/>
                                    <field name="revoke_edit" width="1"/>
                                    <field name="revoke_delete" width="1"/>
                                    <field name="revoke_export" width="1"/>
                                    <field name="revoke_archive_unarchive" width="1"/>
                                    <field name="revoke_duplicate" width="1"/>
                                    <field name="revoke_chatter" width="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="super_access_rights_mgmt_action" model="ir.actions.act_window">
        <field name="name">Super Access Rights</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">access.right.mgmt</field>
        <field name="view_mode">list,form,search</field>
    </record>
    <menuitem name="Super Access Rights" id="access_rights_management_root"
        web_icon="super_access_right_management,static/description/icon.png" sequence="200" />

    <menuitem id="access_rights_management_detail" name="Super Access Rights"
        parent="access_rights_management_root"
        action="super_access_rights_mgmt_action" />

</odoo>
    