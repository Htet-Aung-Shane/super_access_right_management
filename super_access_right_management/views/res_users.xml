<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="res_users_inherit_access_rights_from" model="ir.ui.view">
        <field name="name">res.users.inherit.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Access Rights Management" groups="super_access_right_management.super_access_right_control_group">
                    <field name='access_rights_mgmt_ids'>
                        <list>
                            <field name="name"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>